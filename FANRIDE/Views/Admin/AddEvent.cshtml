@model FanRide.Models.Event

@{
    ViewData["Title"] = "Add New Event";
}

<div class="container py-5">
    <h2 class="mb-4 text-center text-2xl font-bold text-purple-800">🎤 Add New Concert/Event</h2>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>✅ Success:</strong> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong>❌ Error:</strong> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <form method="post" asp-action="AddEvent" asp-controller="Admin" enctype="multipart/form-data">
        <!-- Form fields here -->
        <div class="mb-3">
            <label class="form-label">Title</label>
            <input asp-for="Title" class="form-control" required />
        </div>
        <div class="mb-3">
            <label class="form-label">Artist</label>
            <input asp-for="Artist" class="form-control" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Date & Time</label>
            <input asp-for="Date" type="datetime-local" class="form-control" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Location</label>
            <input asp-for="Location" class="form-control" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Description</label>
            <textarea asp-for="Description" class="form-control" rows="4"></textarea>
        </div>

        <div class="mb-3">
            <label class="form-label">Upload Image</label>
            <input type="file" name="ImageFile" class="form-control" accept="image/*" />
        </div>
        <div class="text-center">
            <button type="submit" class="btn btn-primary">➕ Add Event</button>
        </div>
    </form>
</div>
