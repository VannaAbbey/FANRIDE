@model List<FanRide.Models.BookingDetails>

@{
    ViewData["Title"] = "My Bookings";
}

<div class="container py-5">
    <h2 class="text-center text-2xl font-bold mb-4 text-gray-800">🎟️ My Booked Rides</h2>

    @if (Model == null || !Model.Any())
    {
        <div class="text-center text-gray-600 mt-4">
            <p>You have not booked any rides yet.</p>
        </div>
    }
    else
    {
        <div class="overflow-x-auto mt-4">
            <table class="min-w-full table-auto border border-gray-300 shadow-sm mx-auto">
                <thead class="bg-gray-100 text-gray-700">
                    <tr>
                        <th class="border p-2 text-left">Concert</th>
                        <th class="border p-2 text-left">Date</th>
                        <th class="border p-2 text-left">Location</th>
                        <th class="border p-2 text-left">Landmark</th>
                        <th class="border p-2 text-left">Departure</th>
                        <th class="border p-2 text-left">Vehicle</th>
                        <th class="border p-2 text-left">Plate</th>
                        <th class="border p-2 text-left">Seat Type</th>
                        <th class="border p-2 text-left">Seats</th>
                        <th class="border p-2 text-left">Price</th>
                        <th class="border p-2 text-left">Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var booking in Model)
                    {
                        <tr class="hover:bg-gray-50">
                            <td class="border p-2">@booking.ConcertName</td>
                            <td class="border p-2">@booking.ConcertDate.ToString("MMM dd, yyyy hh:mm tt")</td>
                            <td class="border p-2">@booking.ConcertLocation</td>
                            <td class="border p-2">@booking.Landmark</td>
                            <td class="border p-2">@booking.DepartureTime.ToString("MMM dd, yyyy hh:mm tt")</td>
                            <td class="border p-2">@booking.VehicleType</td>
                            <td class="border p-2">@booking.PlateNumber</td>
                            <td class="border p-2">@booking.SeatType</td>
                            <td class="border p-2">@booking.SeatCount</td>
                            <td class="border p-2">₱@booking.Price.ToString("N2")</td>
                            <td class="border p-2">@booking.Status</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }

    <div class="text-center mt-5">
        <a asp-controller="Riders" asp-action="Dashboard" class="btn btn-secondary">
            ← Back to Dashboard
        </a>
    </div>
</div>
